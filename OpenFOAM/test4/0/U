FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
dimensions      [0 1 -1 0 0 0 0];
internalField   uniform (0 0 0);

boundaryField
{
    inlet_annulus   { type fixedValue; value uniform (0 0 -50); }
    inlet_cushion   { type fixedValue; value uniform (0 0 -5); }

    cushionTopWall  { type noSlip; }
    bottomWall      { type noSlip; }

    wedgeLow        { type wedge; }
    wedgeHigh       { type wedge; }

    innerAxis       { type symmetry; }         // << match con patch "symmetry"

    // Far-field “aperto”: scegli una delle due opzioni:

    // A) freestream:
    outerWall
    {
        type            freestream;
        freestreamValue uniform (0 0 0);
    }

    // B) (alternativa) inletOutlet + zeroGradient su p:
    // outerWall { type inletOutlet; inletValue uniform (0 0 0); value uniform (0 0 0); }
}
